super + Escape
  pkill -USR1 -x sxhkd

# terminal
super + Return
  st 

#CLI Music Player
super + p 
    alacritty -e ncmpcpp

# CLI file manager
super + e
    alacritty -e lf-ueberzug

# Screenshot
Print
 ~/.config/rofi/applets/bin/screenshot.sh

#rofi launcher
alt + space
 ~/.config/rofi/launchers/type-1/launcher.sh

#rofi powermenu
alt + p
  ~/.config/rofi/powermenu-systemd/type-1/powermenu.sh

#dmenu
super + d
  dmenu_run -c -F

# Media controls
XF86AudioRaiseVolume 
  pactl set-sink-volume 0 +5% #increase sound volume

XF86AudioLowerVolume
  pactl set-sink-volume 0 -5% #decrease sound volume

XF86AudioMute 
  pactl set-sink-mute 0 toggle #mute sound

XF86MonBrightnessUp 
  brightnessctl set +10%

XF86MonBrightnessDown 
  brightnessctl set 10%-

# Browser
super + b
  firefox
